<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".AbsenNowFragment">
<!--    <android.support.v7.widget.RecyclerView-->
<!--        android:id="@+id/myRecycleView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"/>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Absen"
        android:layout_gravity="center"
        android:layout_marginTop="-90dp"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="17dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:id="@+id/text_absens"
        />

    <TextView
        android:id="@+id/text_absen_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:layout_gravity="center"
        android:layout_marginTop="-45dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textAlignment="center"
        android:text="Klik tombol masuk atau pulang untuk mengisi daftar hadir hari ini."
        android:textColor="@color/text_color"
        android:textSize="12dp" />

    <GridLayout
        android:layout_below="@id/text_absen_now"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/background_button"
            android:id="@+id/button_masuk"
            android:text="Masuk"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/background_button"
            android:id="@+id/button_pulang"
            android:text="Pulang"/>
    </GridLayout>


</FrameLayout>