<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/header_nav"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:id="@+id/Login_shapeone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Login Absen"
        android:textColor="@color/text_color"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinssemibold"
        android:textAlignment="center"
        android:layout_below="@+id/Login_shapeone"
        android:id="@+id/Login_textheading1"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/loteng_kab"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Login_textheading1"
        android:layout_centerHorizontal="true"
        android:id="@+id/Login_lotengkab_logo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Silahkan login untuk melakukan absen"
        android:textColor="@color/text_color"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsregular"
        android:textAlignment="center"
        android:layout_below="@+id/Login_lotengkab_logo"
        android:id="@+id/textheading6"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_below="@+id/textheading6"
        android:id="@+id/Login_linearlayout1">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/secondary"
            android:hint="Masukkan nama lengkap"
            android:inputType="text"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/white"
            android:id="@+id/inputnamalengkap"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/secondary"
            android:hint="Masukkan password"
            android:inputType="textPassword"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="10dp"
            android:backgroundTint="@color/white"
            android:id="@+id/inputpassword"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:backgroundTint="@color/background_button"
        android:fontFamily="@font/poppinsbold"
        android:width="300dp"
        android:layout_below="@id/Login_linearlayout1"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_register"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_register"
        android:id="@+id/container_text_login"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not have an account.?"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/secondary"
            android:paddingLeft="10dp"
            android:text="Register"
            android:textSize="12sp"
            android:id="@+id/text_register_in_login"
            />
    </LinearLayout>
</RelativeLayout>